<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.isen.ROMAN.androidtoolbox">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_android_ios"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_android_ios"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="fr.isen.ROMAN.androidtoolbox.WebServiceActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.BLEScanActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.BLEDeviceActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.WebServiceDetails" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.PermissionsActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.SaveActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.CycleLife" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.HomeActivity" />
        <activity android:name="fr.isen.ROMAN.androidtoolbox.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>