<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.isen.ROMAN.androidtoolbox">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_android_ios"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_android_ios"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".BLEService"
            android:enabled="true"
            android:exported="true"></service>

        <activity android:name=".BLEScanActivity" />
        <activity android:name=".BLEDeviceActivity" />
        <activity android:name=".WebServiceDetails" />
        <activity android:name=".WebServicesActivity" />
        <activity android:name=".WebServicesAdapter" />
        <activity android:name=".API.Next_evolution" />
        <activity android:name=".API.Json4Kotlin_Base" />
        <activity android:name=".API.Pokemon" />
        <activity android:name=".PermissionsActivity" />
        <activity android:name=".SaveActivity" />
        <activity android:name=".CycleLife" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>